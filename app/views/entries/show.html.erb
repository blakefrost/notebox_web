<%= render "lightbox_initialize" %>

<div class="container entry-show">
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700,300' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag 'entries' %>
  <div class="entry">
    <h4>
      <%= @title || @entry.formatted_date_time %>
      <a href="/entries/<%= @entry[:path] %>/edit" class="edit">edit</a>
    </h4>
    <%= raw(@entry.html) %>
    <p class="foot-links">
      <a href="<%= entries_url(days_ago: (Date.today - @entry[:created_at].to_date).to_i) %>"><%= time_ago_in_words(@entry[:created_at]) %> ago</a>
      &bull;
      <a href="/entries/<%= params[:path] %>/log">Log</a>
    </p>
  </div>
</div>
