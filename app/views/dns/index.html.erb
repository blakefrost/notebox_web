<style type="text/css" media="screen">
  .green {
    color: green;
  }
  .red {
    color: red;
  }
</style>
<div class="container">
  DNS Proxy is
  <% if @running %>
    <strong class="green">Running</strong>&nbsp;&nbsp;
    <a class="btn btn-primary" href="#"><i class="fa fa-refresh fa-fw"></i> Restart</a>
    <a class="btn btn-danger" href="#"><i class="fa fa-stop fa-fw"></i> Stop</a>
  <% else %>
    <strong class="red">Stopped</strong>&nbsp;&nbsp;
    <a class="btn btn-success" href="#"><i class="fa fa-play fa-fw"></i> Start</a>
  <% end -%>
</div>
