<style type="text/css" media="screen">
  .green {
    color: green;
  }
  .red {
    color: red;
  }
</style>
<div class="container">
  DNS Proxy is
  <% if @running %>
    <strong class="green">Running</strong>&nbsp;&nbsp;
    <input type="button" value="Stop" class="btn" />
  <% else %>
    <strong class="red">Stopped</strong>&nbsp;&nbsp;
    <input type="button" value="Start" class="btn" />
  <% end -%>
</div>
